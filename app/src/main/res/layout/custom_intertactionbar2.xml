<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/line_selected" />

    <ImageView
        android:id="@+id/sendEmailInteraction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sendMessageInteraction"
        app:srcCompat="@drawable/interaction_email"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendEmailInteraction"
        app:srcCompat="@drawable/line_selected" />

    <ImageView
        android:id="@+id/sendMessageInteraction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/sendEmailInteraction"
        app:layout_constraintLeft_toRightOf="@+id/sendEmailInteraction"
        app:layout_constraintRight_toLeftOf="@+id/shareInteraction"
        app:layout_constraintTop_toTopOf="@+id/sendEmailInteraction"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/interaction_sms" />

    <ImageView
        android:id="@+id/shareInteraction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/sendMessageInteraction"
        app:layout_constraintLeft_toRightOf="@+id/sendMessageInteraction"
        app:layout_constraintRight_toLeftOf="@+id/cancelInteraction"
        app:layout_constraintTop_toTopOf="@+id/sendMessageInteraction"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/cancelInteraction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/shareInteraction"
        app:layout_constraintLeft_toRightOf="@+id/shareInteraction"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shareInteraction"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/close_interaction" />

</android.support.constraint.ConstraintLayout>