<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBackground">

    <ImageView
        android:id="@+id/customMapImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/customLawImg"
        app:srcCompat="@drawable/navi_center"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/customLawImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/customMapImg"
        app:layout_constraintLeft_toRightOf="@+id/customMapImg"
        app:layout_constraintRight_toLeftOf="@+id/customFaqImg"
        app:layout_constraintTop_toTopOf="@+id/customMapImg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/navi_law" />

    <ImageView
        android:id="@+id/customFaqImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/customLawImg"
        app:layout_constraintLeft_toRightOf="@+id/customLawImg"
        app:layout_constraintRight_toLeftOf="@+id/customMailImg"
        app:layout_constraintTop_toTopOf="@+id/customLawImg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/navi_faq" />

    <ImageView
        android:id="@+id/customMailImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/customFaqImg"
        app:layout_constraintLeft_toRightOf="@+id/customFaqImg"
        app:layout_constraintRight_toLeftOf="@+id/customSettingsImg"
        app:layout_constraintTop_toTopOf="@+id/customFaqImg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/navi_email" />

    <ImageView
        android:id="@+id/customSettingsImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/customMailImg"
        app:layout_constraintLeft_toRightOf="@+id/customMailImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customMailImg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/navi_settings" />

</android.support.constraint.ConstraintLayout>